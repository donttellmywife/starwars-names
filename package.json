{
  "name": "not-starwars-names",
  "description": "Get random Star Wars names",
  "main": "src/index.js",
  "scripts": {
    "commit": "git-cz",
    "test": "mocha src/index.test.js -w",
    "test:single": "istanbul cover -x *.test.js node_modules/mocha/bin/_mocha -- -R spec src/index.test.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/donttellmywife/starwars-names.git"
  },
  "keywords": [
    "star",
    "wars"
  ],
  "author": "Vladimir Puchkov <volodymyr.puchkov@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/donttellmywife/starwars-names/issues"
  },
  "homepage": "https://github.com/donttellmywife/starwars-names#readme",
  "dependencies": {
    "unique-random-array": "1.0.0"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "commitizen": "2.8.6",
    "cz-conventional-changelog": "1.2.0",
    "ghooks": "1.3.2",
    "istanbul": "^0.4.5",
    "mocha": "3.1.2",
    "semantic-release": "^4.3.5"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test:single"
    }
  }
}
